<% object.each do |comments| %>
  <h3>Comment:<%= comments.comment %>
    <% if current_user && (current_user == comments.user || current_user.role == 'admin') %>
      <%= link_to "delete", article_comment_path(comments.article,comments), method: :delete, data: {confirm: "are you sure?"}, class: "btn btn-danger  btn-xs"%>
    <% end %><br/>
    <small>comment by:<%= User.find(comments.user_id).name %></small>
  </h3>
  <br/>
<% end %>