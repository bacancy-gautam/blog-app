<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
   <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
   <div class="field">
    <%= f.label :number %><br />
    <%= f.number_field :number, autofocus: true, autocomplete: "number" %>
  </div>
  <div class="field">
    <b>Gender</b><br />
    <%= f.radio_button :gender, 'male',id: 'male' %> 
    <label for="male">male</label> <br />
    <%= f.radio_button :gender, 'female',id:'female' %> 
    <label for="female">female</label> <br />
  </div>
   <div class="field">
    <b>Role</b><br />
    <%= f.radio_button :role, 'admin',id: 'admin' %>
    <label for="admin">admin</label> <br />
    <%= f.radio_button :role, 'user',id: 'user' %> 
    <label for="user">user</label><br />
  </div>
  
  
   <div class="field">
    <b>topics of your interest</b><br />
    <%# Category.all.each do |category| %>
    <%= collection_check_boxes :user, :category_ids, Category.all, :id, :name, include_hidden: false do |category| %>
    <%#= category.name %>
      <%= category.label %>
      <%= category.check_box %>
    <% end %>
    <%# end %>
  </div>  
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
